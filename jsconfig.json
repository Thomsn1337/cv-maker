{
    "compilerOptions": {
        "target": "ES2020",
        "module": "ES2020",
        "moduleResolution": "node",
        "jsx": "react-jsx",
        "checkJs": true,

        "baseUrl": ".",
        "paths": {
            "@customTypes/*": ["types/*"],
            "@components/*": ["src/components/*"],
            "@styles/*": ["src/styles/*"]
        }
    },
    "include": ["src", "declarations.d.ts"],
    "exclude": ["node_modules", "dist"]
}
